{
  "name": "@ministryofjustice/fb-components",
  "version": "1.0.2",
  "description": "Components as JSON Schemas, Nunjucks templates, Nunjucks helpers, and utilities for Form Builder",
  "scripts": {
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack\"",
    "build:watch": "npm run gulp -- build:watch",
    "build:fonts": "npm run gulp -- build:fonts",
    "build:fonts:watch": "npm run gulp -- build:fonts:watch",
    "build:images": "npm run gulp -- build:images",
    "build:images:watch": "npm run gulp -- build:images:watch",
    "build:js": "webpack",
    "build:js:watch": "npm run build:js -- --watch",
    "build:css": "npm run gulp -- build:css",
    "build:css:watch": "npm run gulp -- build:css:watch",
    "lint": "eslint . --ext .json && npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint *.js build templates specification src test",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "mocha test --recursive",
    "gulp": "gulp --color",
    "pre-commit": "npm run build && git add assets"
  },
  "bin": {
    "expand-all": "specification/bin/expand-all.js",
    "expand-schema": "specification/bin/expand-schema.js",
    "format-data": "specification/bin/format-data.js",
    "format-schemas": "specification/bin/format-schemas.js",
    "lint-all": "specification/bin/lint-all.js",
    "lint-data": "specification/bin/lint-data.js",
    "lint-schemas": "specification/bin/lint-schemas.js",
    "test-specifications": "specification/bin/test-specifications.js",
    "validate": "specification/bin/validate.js",
    "validate-specifications": "specification/bin/validate-specifications.js"
  },
  "author": "Form Builder Team <form-builder-team@digital.justice.gov.uk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/fb-components.git"
  },
  "license": "MIT",
  "dependencies": {
    "@ministryofjustice/fb-utils-node": "^0.1.8",
    "@ministryofjustice/module-alias": "^1.0.8",
    "accessible-autocomplete": "^2.0.1",
    "ajv": "^6.10.2",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "glob": "^7.1.6",
    "glob-all": "^3.1.0",
    "glob-promise": "^3.4.0",
    "govuk-frontend": "^3.4.0",
    "json-schema-merge-allof": "^0.7.0",
    "json-schema-ref-parser": "^7.1.3",
    "jsonlint": "^1.6.3",
    "jsonpath": "^1.0.2",
    "markdown-it": "^10.0.0",
    "mkdirp": "^0.5.1",
    "nunjucks": "^3.2.0",
    "shelljs": "^0.8.3",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@ministryofjustice/eslint-config-fb": "^1.1.6",
    "ajv-cli": "^3.0.0",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "babel-preset-preact": "^2.0.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-json": "^2.0.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^3.1.0",
    "mocha": "^7.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-scss": "^2.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^8.0.2",
    "sinon-chai": "^3.4.0",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "terser-webpack-plugin": "^2.3.1",
    "vinyl-paths": "^3.0.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "_moduleAliases": {
    "~/fb-components": "."
  },
  "specifications": {
    "$idRoot": "http://gov.uk/schema/v1.0.0",
    "protected": [
      "condition"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
