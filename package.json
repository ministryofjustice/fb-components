{
  "name": "@ministryofjustice/fb-components",
  "version": "1.0.16",
  "description": "Components as JSON Schemas, Nunjucks templates, Nunjucks helpers, and utilities for Form Builder",
  "scripts": {
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack\"",
    "build:watch": "npm run gulp -- build:watch",
    "build:fonts": "npm run gulp -- build:fonts",
    "build:fonts:watch": "npm run gulp -- build:fonts:watch",
    "build:images": "npm run gulp -- build:images",
    "build:images:watch": "npm run gulp -- build:images:watch",
    "build:js": "webpack",
    "build:js:watch": "npm run build:js -- --watch",
    "build:css": "npm run gulp -- build:css",
    "build:css:watch": "npm run gulp -- build:css:watch",
    "lint": "eslint . --ext .json && npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint *.js build templates src test",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "mocha test --recursive",
    "gulp": "gulp --color",
    "pre-commit": "npm run build && git add assets",
    "prepublishOnly": "npm run build"
  },
  "author": "Form Builder Team <form-builder-team@digital.justice.gov.uk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/fb-components.git"
  },
  "license": "MIT",
  "dependencies": {
    "@ministryofjustice/module-alias": "^1.0.13",
    "accessible-autocomplete": "^2.0.2",
    "ajv": "^6.12.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "glob": "^7.1.6",
    "glob-all": "^3.1.0",
    "glob-promise": "^3.4.0",
    "govuk-frontend": "^3.6.0",
    "json-schema-merge-allof": "^0.7.0",
    "json-schema-ref-parser": "^8.0.0",
    "jsonlint": "^1.6.3",
    "jsonpath": "^1.0.2",
    "markdown-it": "^10.0.0",
    "mkdirp": "^1.0.3",
    "nunjucks": "^3.2.0",
    "shelljs": "^0.8.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "ajv-cli": "^3.1.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-preact": "^2.0.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.2.3",
    "mocha": "^7.1.0",
    "postcss-normalize": "^8.0.1",
    "postcss-scss": "^2.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.15.0",
    "terser-webpack-plugin": "^2.3.5",
    "vinyl-paths": "^3.0.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "_moduleAliases": {
    "~/fb-components": "."
  },
  "specifications": {
    "$idRoot": "http://gov.uk/schema/v1.0.0",
    "protected": [
      "condition"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
