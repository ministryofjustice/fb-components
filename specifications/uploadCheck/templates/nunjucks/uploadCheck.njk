{%- macro uploadCheck(data) %}
  {% if data.uploadDescriptions.length %}
    <div class="fb-upload-descriptions">
      <ul>
      {% for uploadDescription in data.uploadDescriptions %}
        <li class="govuk-body-l">
          {{ uploadDescription | safe }}
        </li>
      {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% if data.upload %}
     <input type="hidden" name="uploadPage" value="{{ data.uploadPage }}">

    {% for upload in data.upload %}
      <input type="hidden" name="upload" value="{{ upload.uuid }}">
    {% endfor %}
  {% endif %}
{% endmacro -%}
